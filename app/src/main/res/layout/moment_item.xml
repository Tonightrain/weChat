<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/moment_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/bg_image" />

    <TextView
        android:id="@+id/moment_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/moment_avatar"
        android:textColor="@color/teal_700"
        android:textSize="@dimen/profile_nick" />

    <TextView
        android:id="@+id/moment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/moment_nick"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/moment_avatar"
        android:textColor="@color/black"
        android:textSize="@dimen/profile_nick" />


    <LinearLayout
        android:id="@+id/moment_images"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/moment_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/moment_avatar"
        android:orientation="horizontal" >

    </LinearLayout>

